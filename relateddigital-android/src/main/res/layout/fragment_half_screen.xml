<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/half_screen_container_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_image_view"
                android:adjustViewBounds="true"/>

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/top_video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:use_controller="false"
                app:resize_mode="fixed_width"/>

            <LinearLayout
                android:id="@+id/top_promotion_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/top_promotion_code_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/top_promotion_copy_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/content_copy_24"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/top_close_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|end"
            android:layout_margin="5dp"
            android:textColor="#fff" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/half_screen_container_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bot_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bot_image_view"
                android:adjustViewBounds="true"/>

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/bot_video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:use_controller="false"
                app:resize_mode="fixed_width"/>

            <LinearLayout
                android:id="@+id/bot_promotion_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bot_promotion_code_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/bot_promotion_copy_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/content_copy_24"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/bot_close_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|end"
            android:layout_margin="5dp"
            android:textColor="#fff" />
    </FrameLayout>
</RelativeLayout>