        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inner_timer_container_bottom"
            android:layout_marginTop="@dimen/ct_timer_button_margin"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/ct_left_right_padding"
            android:paddingRight="@dimen/ct_left_right_padding">


            <TextView
                android:id="@+id/coupon_text_bottom"
